{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier . --check",
    "lint:prettier:fix": "prettier --write .",
    "lint:fix": "eslint . --fix && prettier --write --list-different . && stylelint --aei ./**/*.scss ./**/*.vue --fix && prettier --write .",
    "lint:style": "stylelint --aei ./**/*.scss ./**/*.vue",
    "lint:style:fix": "stylelint --aei ./**/*.scss ./**/*.vue --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@nuxt/image": "^1.10.0",
    "nuxt": "^3.17.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@nuxt/eslint": "^1.5.2",
    "@nuxtjs/stylelint-module": "^5.2.1",
    "commitlint": "^19.8.1",
    "cz-customizable": "^7.4.0",
    "eslint": "^9.30.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nuxt-icon": "^1.0.0-beta.7",
    "nuxt-icons": "^3.2.1",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "sass": "^1.89.2",
    "sass-loader": "^16.0.5",
    "stylelint": "^16.21.1",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.12.1",
    "validate-branch-name": "^1.3.2"
  },
  "engines": {
    "node": ">= 22.0.0",
    "npm": ">= 10.7.0"
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "eslint --fix --cache",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --aei --fix"
    ]
  },
  "validate-branch-name": {
    "pattern": "^(feature|bug|fix|hotfix|release)/.+$",
    "errorMsg": "Поправьте наименование ветки, обязательно наличие ключевого слова -> feature|fix|hotfix|release"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "config/git/commitizen.js"
    }
  }
}
